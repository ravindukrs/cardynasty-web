pipeline {
    agent {
        docker {
            image 'node:15-alpine'
            args '-u root:root -p 3000:3000'
            reuseNode true
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh "chmod +x ./jenkins/test.sh"
                sh './jenkins/test.sh'
            }
        }
    }

}